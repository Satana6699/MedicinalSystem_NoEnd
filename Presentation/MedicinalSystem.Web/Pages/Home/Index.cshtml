@page
@{
    Layout = "~/Pages/Shared/Layout.cshtml"; // Указываем путь к макету
}

<h1 style="text-align: center; margin-bottom: 20px; color: #2ECC71;">Medicinal System</h1>

<div id="tables-container" style="display: flex; flex-wrap: wrap; justify-content: center; gap: 20px;">
    <!-- Данные будут загружены сюда через JS -->
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.4.0/axios.min.js"></script>
<script>
    const tables = [
        { name: "Болезни", description: "Информация о болезнях.", link: "/Tables/SingleRecords/Diseases" },
        { name: "Симптомы", description: "Список симптомов", link: "/Tables/SingleRecords/Symptoms" },
        { name: "Гендеры", description: "Классификация гендеров", link: "/Tables/SingleRecords/Genders" },
        { name: "Производители", description: "Наши производители", link: "/Tables/SingleRecords/Manufacturers" },

        { name: "Симптомы и болезни", description: "Информация о связи между болезнями и симптомами.", link: "/Tables/MultipleRecords/DiseaseSymptoms" },
      @*{ name: "Члены семьи", description: "Список членов семьи, проходивших лечение", link: "/Tables/MultipleRecords/FamilyMember" },
        { name: "Цены препоратов", description: "Цены на наши препораты", link: "/Tables/MultipleRecords/MedicinePrices" },
        { name: "Препораты", description: "Медицинские лекарства от болезней", link: "/Tables/MultipleRecords/Medicines" },
        { name: "Рецепты", description: "Рецепты, выданные нами", link: "/Tables/MultipleRecords/Prescriptions" },
        { name: "Лечение", description: "Курсы нашего лечения", link: "/Tables/MultipleRecords/Treatments" },*@
    ];

    function renderTables() {
        const container = document.getElementById("tables-container");
        container.innerHTML = "";

        tables.forEach((table, index) => {
            // Выбор цвета на основе индекса
            const colors = [
                { background: "#3498DB", border: "#2980B9" }, // Синий
                { background: "#3498DB", border: "#2980B9" }, // Синий
                { background: "#3498DB", border: "#2980B9" }, // Синий
                { background: "#3498DB", border: "#2980B9" }, // Синий
                { background: "#2ECC71", border: "#27AE60" }, // Зелёный
                { background: "#2ECC71", border: "#27AE60" }, // Зелёный
                { background: "#2ECC71", border: "#27AE60" }, // Зелёный
                { background: "#2ECC71", border: "#27AE60" }, // Зелёный
                { background: "#F1C40F", border: "#F39C12" },  // Жёлтый
                { background: "#F1C40F", border: "#F39C12" },  // Жёлтый
            ];
            const color = colors[index % colors.length];

            const card = document.createElement("a");
            card.href = table.link;
            card.style.cssText = `
                background: ${color.background};
                border: 2px solid ${color.border};
                border-radius: 12px;
                padding: 20px;
                width: 300px;
                box-shadow: 0 6px 10px rgba(0, 0, 0, 0.2);
                transition: transform 0.3s, box-shadow 0.3s;
                text-align: center;
                text-decoration: none;
                color: white;
            `;
            card.onmouseover = () => {
                card.style.transform = "scale(1.05)";
                card.style.boxShadow = "0 8px 14px rgba(0, 0, 0, 0.3)";
            };
            card.onmouseout = () => {
                card.style.transform = "scale(1)";
                card.style.boxShadow = "0 6px 10px rgba(0, 0, 0, 0.2)";
            };

            card.innerHTML = `
                <h2 style="margin: 0 0 10px; font-size: 1.5rem; color: white;">${table.name}</h2>
                <p style="color: #ECF0F1;">${table.description}</p>
            `;

            container.appendChild(card);
        });
    }

    renderTables();
</script>
