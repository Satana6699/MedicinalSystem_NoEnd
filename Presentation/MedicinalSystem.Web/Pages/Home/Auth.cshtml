@page
@model MedicinalSystem.Web.Pages.Home.AuthModel
@{
    Layout = "~/Pages/Shared/Layout.cshtml"; // Указываем путь к макету
}
<link rel="stylesheet" href="~/css/auth.css" asp-append-version="true" />


<div class="auth-container">
    <h1>Login</h1>
    <form id="authForm">
        <label for="username">Username</label>
        <input type="text" id="username" name="username" placeholder="Enter your username" required>

        <label for="password">Password</label>
        <input type="password" id="password" name="password" placeholder="Enter your password" required>

        <button type="submit">Login</button>
        <p class="error" id="errorMsg" style="display: none;">Invalid username or password</p>
    </form>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.4.0/axios.min.js"></script>
<script rel="stylesheet" src="~/js/auth/auth.js" asp-append-version="true"></script>
